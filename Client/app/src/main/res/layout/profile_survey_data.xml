<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/australia">
            <TextView
                android:id="@+id/signup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="55dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/survey_textsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="?menuTitle"
                android:text="For us to improve your user experience, your user data would be collected."
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/permission_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="?title"
                android:text="Agree"
                android:onClick="recordPermissionPreference" />

            <Button
                android:id="@+id/permission_disagree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="?title"
                android:text="Disagree"
                android:onClick="recordPermissionPreference"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>