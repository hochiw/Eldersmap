<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/australia">
        <TextView
            android:id="@+id/signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="55dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are not our member yet. Would you like to sign up now?"
            android:textSize="?menuTitle"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/signup_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="?menuTitle"
            android:onClick="startSurvey"
            android:text="Yes" />

        <Button
            android:id="@+id/signup_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="refuseAlert"
            android:textSize="?menuTitle"
            android:text="No" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*EXISTED USER*"
            android:textSize="?menuTitle"
            android:onClick="backActivity"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>